{% extends 'base.html.twig' %}
{% block title %}Questionnaire{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('build/css/app.css')}}">
    <link rel="stylesheet" href="{{asset('assets/css/front/questionnaire.css')}}">
    <link href='http://fonts.googleapis.com/css?family=Crete+Round' rel="stylesheet">
{% endblock %}

{% block body %}
<section >
	<div class="wrapper container">
		<h1 class="entête_formulaire">{{ questionnaire.title }}</h1>

	<ul>
		<li>{{ composant.name }}</li>
		<li>{{ questionnaire.promo }}</li>
		<li>{{ questionnaire.year }}</li>
	</ul>
	<div class="clear"></div>
	<p>
		{{ questionnaire.description }}
	</p>
	<div class="clear"></div>
	<ul class="notation">
		<li> 0 pas d'accord</li>
		<li> 1 plutôt pas d'accord</li>
		<li> 2 plutôt d'accord </li>
		<li> 3 d'accord </li>
	</ul>

	<div class="clear"></div>

	<p class="red">* requis</p>
</section>
	</div>
	

<section >
	<div class="wrapper  container">
		<div class="card">
	    <div class="card-body">

		<form method='POST'>

		{% for ue in ues %}
			<div id="ue_{{ ue.id }}">

			<h2>UE{{ loop.index }} {{ ue.name }}</h2>
			<input name="ue[]" type="hidden" value="{{ ue.id }}">
			{% for question in questions %}
				<div id="answers">
					<p id="{{ question.id }}">{{ question.libelle }}<span class="red">*</span></p>
					<input name="questionUE{{ ue.id }}[]" type="hidden" value="{{ question.id }}">
					<fieldset id="ue_{{ ue.id }}_group{{ loop.index0 }}">
						<div class="form-check form-check-inline">
			  				<input type="radio" class="form-check-input" id="ue{{ ue.id }}_{{ question.id }}_0" name="ue{{ ue.id }}_question{{ question.id }}" value="0" required>
			  				<label class="form-check-label" for="ue{{ ue.id }}_{{ question.id }}_0">0</label>
						</div>
						<div class="form-check form-check-inline">
			  				<input type="radio" class="form-check-input" id="ue{{ ue.id }}_{{ question.id }}_1" name="ue{{ ue.id }}_question{{ question.id }}" value="1">
			  				<label class="form-check-label" for="ue{{ ue.id }}_{{ question.id }}_1">1</label>
						</div>
						<div class="form-check form-check-inline">
			  				<input type="radio" class="form-check-input" id="ue{{ ue.id }}_{{ question.id }}_2" name="ue{{ ue.id }}_question{{ question.id }}" value="2">
			  				<label class="form-check-label" for="ue{{ ue.id }}_{{ question.id }}_2">2</label>
						</div>
						<div class="form-check form-check-inline">
			  				<input type="radio" class="form-check-input" id="ue{{ ue.id }}_{{ question.id }}_3" name="ue{{ ue.id }}_question{{ question.id }}" value="3">
			  				<label class="form-check-label" for="ue{{ ue.id }}_{{ question.id }}_3">3</label>
						</div>
					</fieldset>
				</div>
	        {% endfor %}
	    	</div>
        {% endfor %}

        <button class="btn btn-primary" type="submit">Envoyer</button>

    	</form>
		
		</div>
		</div>
			
	</div>
	
</section>


{% endblock %}

{% block javascripts %}
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="{{ asset('build/js/app.js') }}"> </script>
    <script src="assets/js/front/questionnaire.js"> </script>
{% endblock %}
